#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

branch="$(git symbolic-ref --short HEAD)"

regex="^(feature|fix|chore|docs|refactor|test)\/[a-z0-9-]+$"

if ! echo "$branch" | grep -Eq "$regex"; then
  echo "‚ùå Invalid branch name: $branch"
  echo ""
  echo "Expected format:"
  echo "  feature/my-feature"
  echo "  fix/bug-name"
  echo "  chore/update-deps"
  exit 1
fi
